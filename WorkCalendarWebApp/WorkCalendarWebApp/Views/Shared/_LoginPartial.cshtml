@using Microsoft.AspNetCore.Identity
@using WorkCalendarWebApp.Areas.Identity.Data;

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a id="Limits" href="/Limits" class="nav-link text-dark" title="Limits">Limits</a>
        </li>
        <li class="nav-item">
            <a id="Limits" href="/Teams" class="nav-link text-dark" title="Teams">My Teams</a>
        </li>
        <li class="nav-item">
            <a id="Topics" href="/Topics" class="nav-link text-dark" title="Topics">Topics</a>
        </li>
        <li class="nav-item">
            <a id="manage" class="nav-link text-dark" asp-view="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
</ul>
