@model WorkCalendarWebApp.ViewModel.ObjectivesAndEvents;

@{
    ViewData["Title"] = "Create";
}

<h1>Add Event</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Event.StartDateTime" class="control-label"></label>
                <input asp-for="@Model.Event.StartDateTime" class="form-control" value="@DateTime.Today"/>
                <span asp-validation-for="@Model.Event.StartDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Event.EndDateTime" class="control-label"></label>
                <input asp-for="@Model.Event.EndDateTime" class="form-control" value="@DateTime.Today"/>
                <span asp-validation-for="@Model.Event.EndDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Event.Objective" class="control-label"></label>
                <select asp-for="@Model.SelectedObjectiveId" asp-items="@Model.ObjectiveOptions" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Event.AdditionalInfo" class="control-label"></label>
                <input asp-for="@Model.Event.AdditionalInfo" class="form-control" />
                <span asp-validation-for="@Model.Event.AdditionalInfo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

