@model WorkCalendarWebApp.ViewModel.TeamsAndSubtopics;

@{
    ViewData["Title"] = "Create";
}

<h1>Assign Objective</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Objective.Team" class="control-label"></label>
                <select asp-for="@Model.SelectedTeamId" asp-items ="@Model.TeamOptions" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Objective.Subtopic" class="control-label"></label>
                <select asp-for="@Model.SelectedSubtopicId" asp-items="@Model.SubtopicOptions" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
